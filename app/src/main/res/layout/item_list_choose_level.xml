<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/margin_padding_xsmall"
    android:layout_marginEnd="@dimen/activity_horizontal_margin">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_level"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/color_blue_young"
        app:cardCornerRadius="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvCodeLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_ui_display_semibold"
            android:text="@string/sample_code_level"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:fontFamily="@font/sf_ui_display_semibold"
        android:text="@string/beginner"
        android:textColor="@color/text_color_gray_primary"
        app:layout_constraintBottom_toBottomOf="@id/cardView_level"
        app:layout_constraintStart_toEndOf="@id/cardView_level"
        app:layout_constraintTop_toTopOf="@id/cardView_level" />


</androidx.constraintlayout.widget.ConstraintLayout>