<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen_8dp"
    android:layout_height="wrap_content">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_video"
        android:layout_width="135dp"
        android:layout_height="80dp"
        app:cardCornerRadius="12dp"
        android:elevation="@dimen/dimen_24dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_sample_video" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dimen_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dimen_8dp"
        app:layout_constraintTop_toTopOf="@id/cardView_video"
        app:layout_constraintBottom_toBottomOf="@id/cardView_video"
        app:layout_constraintStart_toEndOf="@id/cardView_video" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_title_video"
            android:fontFamily="@font/sf_ui_display_semibold"
            android:textColor="@color/gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="@string/a1_beginner"
                android:backgroundTint="@color/color_blue_old"
                android:fontFamily="@font/sf_ui_display_semibold"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:textSize="@dimen/text_size_xtiny" />

            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="@string/a2_elementary"
                android:backgroundTint="@color/color_blue_young"
                android:fontFamily="@font/sf_ui_display_semibold"
                android:textSize="@dimen/text_size_xtiny" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>